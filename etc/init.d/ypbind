#!/bin/openrc-run
#
# $FreeBSD$
#

name="ypbind"
description="NIS domain binding daemon"

command="/usr/sbin/$name"
command_args="${nis_client_flags}"

depend()
{
	need localmount
	want ypserv
	keyword -shutdown -stop
}

start_pre()
{
	local _domain

	_domain=`domainname`
	if [ -z "$_domain" ]; then
		ewarn "NIS domainname(1) is not set."
		return 1
	fi
}
