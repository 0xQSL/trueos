command=/usr/sbin/nfsuserd
command_args="$nfsuserd_flags"
name="NFSv4 User Services"

depend()
{
	need localmount rpcbind
	use net logger
}

start_pre()
{

	if yesno nfs_server_managegids; then
		command_args="-manage-gids ${commmand_args}"
	fi

}
