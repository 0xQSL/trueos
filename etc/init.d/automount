name="NFS Automount Client"

depend()
{
	need localmount nfsclient automountd
	use net logger dns
	before inetd xinetd ntpd ntp-client
}

start()
{
	ebegin "Starting $name"
	/usr/sbin/automount ${automount_flags}
	eend $?
}

stop()
{
	/sbin/umount -At autofs
}
