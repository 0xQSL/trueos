{
  "version":"1.0",
  "ports":{
	"type":"git",
	"url":"https://github.com/trueos/trueos-ports",
	"branch":"trueos-master",
	"make.conf":{
		"default": [
			"sysutils_tmux_UNSET=DOCS EXAMPLES"
		],
		"WITH_XTRA_PKGS":[
			"archivers_cabextract_UNSET=docs"
		]
	},
	"build-all":false,
	"build":{
		"default":[
			"sysutils/ipmitool",
			"sysutils/dmidecode",
			"sysutils/tmux"
		],
		"WITH_TRUEOS_TEST": [
			"archivers/cabextract"
		]
	},
	"essential":{
		"default":[ ]
	}
  },
 "iso":{
	"file-name":"TrueOS-x64-%%TRUEOS_VERSION%%-%%GITHASH%%-%%DATE%%",
	"overlay":{
		"type":"git",
		"url":"https://github.com/trueos/iso-overlay",
		"branch":"master"
	},
	"prune":{
		"default": [
			"/usr/local/share/examples",
			"/usr/local/include"
		],
		"WITH_TRUEOS_TEST": [
			"/usr/share/examples",
			"/usr/include"
		]
	},
	"iso-packages":{
		"default": [
			"sysutils/ipmitool",
			"sysutils/dmidecode",
			"sysutils/tmux"
		],
		"WITH_TRUEOS_TEST": [
			"archivers/cabextract"
		]
	},
	"dist-packages":{
		"default": [
			"sysutils/ipmitool",
			"sysutils/dmidecode",
			"sysutils/tmux"
		],
		"WITH_TRUEOS_TEST": [
			"archivers/cabextract"
		]
	},
	"auto-install-packages":{
		"default": [
			"sysutils/ipmitool",
			"sysutils/dmidecode",
			"sysutils/tmux"
		],
		"WITH_TRUEOS_TEST": [
			"archivers/cabextract"
		]
	},
	"install-script":"",
	"auto-install-script":"",
	"post-install-commands": [
		{
			"chroot":true,
			"command":"touch /root/inside-chroot"
		},
		{
			"chroot":false,
			"command":"touch /root/outside-chroot"
		},
		{
			"chroot":true,
			"command":"rm /root/outside-chroot"
		},
		{
			"chroot":false,
			"command":"rm /root/inside-chroot"
		}
	]
 },
  "base-packages": {
	  "name-prefix":"TrueOS",
	  "depends": {
		  "runtime": {
			"uclcmd": {
				"origin": "devel/uclcmd",
				"version": ">0"
			}
		  }
	  },
	  "world-flags":{
		"default": [
			"WITH_FOO=1",
			"WITH_BAR=2"
		]

	  },
	  "kernel-flags":{
		"default": [
			"WITH_FOO=1",
			"WITH_BAR=2"
		]
	  }
  },
